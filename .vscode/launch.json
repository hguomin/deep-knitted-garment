        {
            "name": "Python: Train on 3dpw",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/metro/tools/run_metro_bodymesh.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--train_yaml", "3dpw/train.yaml",
                "--val_yaml", "3dpw/test_has_gender.yaml",
                "--arch", "hrnet-w64",
                "--num_workers", "4",
                "--per_gpu_train_batch_size", "10",  //reduce GPU memory usage by decreasing batch size
                "--per_gpu_eval_batch_size", "10",
                "--num_hidden_layers", "4",
                "--num_attention_heads", "4",
                "--lr", "1e-4",
                "--num_train_epochs", "15", //increase this value will produce better model
                "--input_feat_dim", "2051,512,128",
                "--hidden_feat_dim", "1024,256,128",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHON_PATH": "${workspaceFolder}",
            }  
        },
